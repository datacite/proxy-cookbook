# allow traffic via http
server {
    server_name <%= @subdomain %>.<%= @domain %>;
    listen 80;
    listen 443 ssl;
    set $backend http://<%= @backend %>;
    set $search_backend http://<%= @search_backend %>;

    # /basic_status
    include /etc/nginx/conf.d/nginx_status.conf.inc;

    location = / {
        proxy_pass $backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
        include /etc/nginx/cors;
    }

    location / {
        proxy_pass $search_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
        include /etc/nginx/cors;
    }
}
