server {
    server_name test.datacite.org;
    listen 80;
    listen 443 ssl;
    set $backend http://<%= @backend %>;

    # /basic_status
    include /etc/nginx/conf.d/nginx_status.conf.inc;

    location /handle/ {
        rewrite ^/handle/(.*) https://handle.test.datacite.org$request_uri permanent;
    }

    location / {
        proxy_pass $backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
        include /etc/nginx/cors;
    }
}
