# allow traffic via http
server {
    server_name <%= @subdomain %>.<%= @domain %>;
    listen 80;
    listen 443 ssl;
    set $backend http://<%= @backend %>;

    # block pingdom
    if ($http_user_agent ~* Pingdom.com_bot) {
        return 403;
    }

    # /basic_status
    include /etc/nginx/conf.d/nginx_status.conf.inc;

    # use different search frontend
    # specify paths to not interfere with existing paths

    location = / {
        proxy_pass $backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
    }

