# allow traffic via http
server {
    server_name crosscite.org citation.crosscite.org citation.datacite.org;
    listen 80;
    set $backend http://<%= @backend %>;

    if ( $request_filename ~ citeproc/.+ ) {
        rewrite ^(.*) http://citation.crosscite.org/$1 permanent;
    }

    if ( $request_filename ~ cn/ ) {
        rewrite ^ http://citation.crosscite.org/docs.html permanent;
    }

    location / {
        proxy_pass $backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
        include /etc/nginx/cors;
    }
}
