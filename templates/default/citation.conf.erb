# allow traffic via http
server {
    server_name crosscite.org;
    listen 80;

    location = /citeproc/format {
        return 301 http://citation.crosscite.org/format?$query_string;
    }

    location = /citeproc {
        return 301 http://citation.crosscite.org;
    }

    location = /cn {
        return 301 http://citation.crosscite.org/docs.html;
    }

    location / {
        return 301 http://citation.crosscite.org$request_uri;
    }
}

server {
    server_name citation.crosscite.org;
    listen 80;
    set $backend http://<%= @backend %>;

    location / {
        proxy_pass $backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-Proto $scheme;

        include /etc/nginx/proxy;
        include /etc/nginx/cors;
    }
}

server {
    server_name citation.datacite.org;
    listen 80;
    listen 443 ssl http2;
    set $backend http://<%= @backend %>;

    location / {
        proxy_pass $backend;
