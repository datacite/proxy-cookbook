# redirect all requests to doi proxy
server {
    server_name doi.datacite.org;
    listen 80;
    resolver <%= @resolver %>;

    location / {
        return 301 https://doi.datacite.org$request_uri;
    }
}

server {
    server_name doi.datacite.org;
    listen 8080;
    resolver <%= @resolver %>;

    location / {
        return 301 https://<%= @backend %>;
    }
}
